<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/albumlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/albumlabel" />

    <TextView
        android:id="@+id/artistelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/artistelabel" />

    <TextView
        android:id="@+id/genrelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genrelabel"
        android:layout_below="@+id/detailslabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/prixlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album"
        android:layout_toRightOf="@+id/prixlabel" />

    <TextView
        android:id="@+id/detailslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artistelabel"
        android:text="@string/detailslabel" />



    <ImageView
        android:id="@+id/pochette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#000000"
        android:padding="1dp" />

</RelativeLayout>